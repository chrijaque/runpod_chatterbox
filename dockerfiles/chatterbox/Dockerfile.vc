
FROM runpod/pytorch:2.8.0-py3.11-cuda12.8.1-cudnn-devel-ubuntu22.04

WORKDIR /

# Set environment variables for logging
ENV PYTHONUNBUFFERED=1
ENV PYTHONFAULTHANDLER=1
ENV PYTHON_UNBUFFERED="true"
ENV DEBIAN_FRONTEND=noninteractive

# Install system dependencies including FFmpeg
RUN apt-get update && \
    apt-get install -y \
    git \
    wget \
    curl \
    ffmpeg \
    libavcodec-extra \
    libavformat-dev \
    libavutil-dev \
    libswscale-dev && \
    rm -rf /var/lib/apt/lists/*

# Install system dependencies for audio processing
RUN apt-get update && apt-get install -y \
    ffmpeg \
    && rm -rf /var/lib/apt/lists/*

# Set git global config to avoid warnings
RUN git config --global --add safe.directory '*'

# Setup environment for Hugging Face model cache baked into the image
ENV HF_HOME=/models/hf \
    HF_HUB_CACHE=/models/hf/hub \
    TRANSFORMERS_CACHE=/models/hf

# Install Python dependencies with verbose pip output
COPY requirements/chatterbox.txt /requirements.txt

# Debug: Show what's in requirements.txt
RUN echo "ğŸ“‹ Contents of requirements.txt:" && cat requirements.txt

# Add build argument to force cache invalidation
ARG CACHE_BUST=1
ARG BUILD_TIME
ARG RUNPOD_CACHE_BUST=1
ARG CHATTERBOX_REF=master

# Invalidate cache when the selected ref's HEAD changes
ADD https://api.github.com/repos/chrijaque/chatterbox_embed/commits/${CHATTERBOX_REF} /tmp/chatterbox_head.json

# Cache-bust layer: change RUNPOD_CACHE_BUST each build to force refetch
RUN echo "ğŸ§¹ Cache bust: ${CACHE_BUST}-${RUNPOD_CACHE_BUST} at ${BUILD_TIME}" && true

# Clone the forked repository and install in eatable mode
RUN echo "ğŸ”§ Cloning forked repository..." && \
    echo "ğŸ” Testing repository access..." && \
    curl -s -o /dev/null -w "%{http_code}" https://github.com/chrijaque/chatterbox_embed && \
    echo "ğŸ”§ Uninstalling existing PyTorch packages to prevent conflicts..." && \
    pip uninstall -y torch torchvision torchaudio chatterbox-tts || true && \
    echo "ğŸ”§ Cloning forked repository..." && \
    git clone https://github.com/chrijaque/chatterbox_embed.git /workspace/chatterbox_embed && \
    cd /workspace/chatterbox_embed && \
    echo "ğŸ”§ Fetching ref ${CHATTERBOX_REF}..." && \
    git fetch --tags --force origin ${CHATTERBOX_REF} || true && \
    if git ls-remote --exit-code origin ${CHATTERBOX_REF} >/dev/null 2>&1; then \
      REF=origin/${CHATTERBOX_REF}; \
    else \
      REF=${CHATTERBOX_REF}; \
    fi && \
    echo "ğŸ”§ Checking out ${REF}..." && \
    git checkout --detach ${REF} && \
    echo "ğŸ”§ Installing forked repository in editable mode..." && \
    pip install -e /workspace/chatterbox_embed && \
    echo "ğŸ” Verifying forked repository installation..." && \
    pip show chatterbox-tts | grep -E "(Location|Version)" && \
    python -c "import chatterbox; print('âœ… chatterbox imported from:', chatterbox.__file__)"

# Debug: Check which repository was installed
RUN echo "ğŸ” Checking installed repository..." && \
    pip show chatterbox-tts && \
    echo "ğŸ” Checking if it's an editable install..." && \
    python -c "import chatterbox; print('ğŸ“‚ chatterbox.__file__:', chatterbox.__file__); print('ğŸ“‚ Is editable:', 'site-packages' not in chatterbox.__file__)"

# Install other requirements (excluding chatterbox-tts since it's already installed)
RUN echo "ğŸ”§ Installing other requirements..." && \
    pip install -v -r requirements.txt && \
    echo "ğŸ” Verifying chatterbox-tts is still from forked repo..." && \
    pip show chatterbox-tts | grep -E "(Location|Version)"

# Pre-download model assets into the image cache to avoid runtime downloads
RUN echo "ğŸ”§ Preparing HF cache for predownload..." && \
    mkdir -p /models/hf/hub && \
    python - <<'PY'
from huggingface_hub import snapshot_download
print("ğŸ”½ Pre-downloading ResembleAI/chatterbox (including all model assets)...")
snapshot_download(
    repo_id="ResembleAI/chatterbox",
    revision="main",
)
print("âœ… Pre-download complete.")
PY

# Copy files
COPY handlers/chatterbox/vc_handler.py /

# Create required directories
RUN mkdir -p /voice_profiles /voice_samples /temp_voice

# Models are pre-downloaded into the image; runtime will use the baked cache

# Final verification after all installations
RUN echo "ğŸ” Final verification after all installations..." && \
    pip show chatterbox-tts && \
    echo "ğŸ” Final editable install check..." && \
    python -c "import chatterbox; print('ğŸ“‚ Final chatterbox.__file__:', chatterbox.__file__); print('ğŸ“‚ Is editable:', 'site-packages' not in chatterbox.__file__)" && \
    echo "ğŸ” Checking s3gen module..." && \
    python -c "import chatterbox.models.s3gen.s3gen as s3gen; print('ğŸ“‚ s3gen.__file__:', s3gen.__file__); print('ğŸ“‚ Has inference_from_text:', hasattr(s3gen.S3Token2Wav, 'inference_from_text'))"

# Start the container with diagnostic
CMD ["python3", "-u", "vc_handler.py"]


